<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main"
    tools:context=".Activity.ChooseProductActivity">

    <LinearLayout
        android:id="@+id/linearLayoutchoose1"
        android:layout_width="150dp"
        android:layout_height="189dp"
        android:layout_marginTop="168dp"
        android:background="@drawable/frame_select"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.557"
        app:layout_constraintStart_toEndOf="@+id/linearLayoutchoose"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView">


        <TextView
            android:id="@+id/product"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/nulll"
            android:clickable="false"
            android:textSize="18dp"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="PRODUKT" />

        <NumberPicker
            android:id="@+id/nameProductPicker"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutchoose"
        android:layout_width="150dp"
        android:layout_height="189dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="168dp"
        android:background="@drawable/frame_select"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/nulll"
            android:clickable="false"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="ILOŚĆ" />

        <NumberPicker
            android:id="@+id/amountPicker"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="wrap_content"
        android:layout_height="174dp"
        android:layout_margin="5dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/frame_scrolview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.054">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cebula"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_marginHorizontal="4dp"
                android:adjustViewBounds="true"
                android:background="@drawable/czosnek"></ImageView>

            <ImageView
                android:id="@+id/d"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_marginHorizontal="4dp"
                android:adjustViewBounds="true"
                android:background="@drawable/cebula"></ImageView>

            <ImageView
                android:id="@+id/de"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_marginHorizontal="4dp"
                android:adjustViewBounds="true"
                android:background="@drawable/redapple"></ImageView>

        </LinearLayout>
    </HorizontalScrollView>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/appCompatEditText"
        android:layout_width="312dp"
        android:layout_height="122dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/frame_select"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonAddProduct"
        android:layout_width="260dp"
        android:layout_height="57dp"
        android:background="@drawable/button_add_product"
        android:text="Dodaj do koszyka"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView"
        app:layout_constraintVertical_bias="0.881" />


</androidx.constraintlayout.widget.ConstraintLayout>