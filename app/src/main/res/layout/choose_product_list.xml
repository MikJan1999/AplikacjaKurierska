<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/frame_select"
    android:padding="10dp"

    >

    <ImageView
        android:src="@drawable/photo"
        android:id="@+id/imageCustomerChoose"
        android:layout_width="145dp"
        android:layout_height="145dp">

    </ImageView>


    <TextView
        android:id="@+id/productNameChoose"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="30dp"
        />


    <TextView
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        android:text="Cena produktu"
        android:gravity="center"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/productPriceChoose"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        />

    <TextView
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        android:text="Opis produktu"
        android:gravity="center"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/productDescriptionChoose"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        />
</LinearLayout>

