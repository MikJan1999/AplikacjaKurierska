<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    android:background="@drawable/background_main"
    android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar"
    >

    <Button
        android:id="@+id/backToMain"
        android:layout_width="38dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="352dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/back" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:layout_alignParentBottom="true"
        android:layout_marginBottom="612dp"
        android:gravity="center"
        android:text="Edytuj produkt"
        android:textSize="40dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/lineara"
        android:layout_width="match_parent"
        android:layout_height="157dp"
        android:layout_above="@+id/nameProductAddEdit"
        android:layout_marginBottom="47dp">

        <ImageView
            android:id="@+id/galleryImageEdit"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="43dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="73dp"

            android:layout_marginBottom="3dp"
            android:background="@drawable/frame_select" />

        <Button
            android:id="@+id/galleryButtonedit"
            android:layout_width="87dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="54dp"
            android:layout_marginEnd="43dp"
            android:layout_marginBottom="33dp"
            android:background="@drawable/frame_select"
            android:shadowColor="@android:color/background_dark"
            android:text="Dodaj zdjecie"
            android:textSize="12dp" />
    </RelativeLayout>


    <EditText
        android:id="@+id/nameProductAddEdit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/frame_select"
        android:layout_above="@+id/priceProductEdit"

        android:layout_alignParentEnd="true"
        android:layout_marginEnd="-3dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:hint="NAZWA PRODUKTU"
        android:textSize="20dp"
        android:padding="10dp"

        android:textStyle="bold" />

    <EditText
        android:id="@+id/priceProductEdit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/descriptionProductEdit"
        android:background="@drawable/frame_select"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:padding="10dp"
        android:hint="CENA PRODUKTU [zÅ‚]"
        android:textSize="20dp" />

<EditText
    android:id="@+id/descriptionProductEdit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/buttonEditProductForSaleEdit"
        android:layout_marginBottom="50dp"
        android:gravity="center"
    android:padding="10dp"

    android:background="@drawable/frame_select"
        android:hint="OPIS PRODUKTU"
        android:textSize="20dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonEditProductForSaleEdit"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button_add_product"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:text="Edytuj produkt" />

</RelativeLayout>
