<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
android:orientation="vertical"
    android:background="@drawable/background_main"
    android:padding="20dp"
    >


    <TextView
        android:id="@+id/textProductCustomerAddEdit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:text="Dodaj produkt"
        android:textSize="40dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginBottom="40dp"
        >

        <ImageView
            android:id="@+id/galleryImage"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="43dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="73dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/frame_select" />

        <Button
            android:id="@+id/galleryButton"
            android:layout_width="87dp"
            android:layout_height="53dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="54dp"
            android:layout_marginEnd="43dp"
            android:layout_marginBottom="33dp"
            android:background="@drawable/frame_select"
            android:shadowColor="@android:color/background_dark"
            android:text="Dodaj zdjęcie"
            android:textSize="12dp" />
    </RelativeLayout>

    <EditText
        android:id="@+id/nameProductAdd"
        android:layout_width="370dp"
        android:layout_height="54dp"
        android:layout_marginBottom="40dp"

        android:layout_alignParentEnd="true"
        android:layout_marginEnd="-5dp"
        android:gravity="center"
        android:hint="NAZWA PRODUKTU"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/priceProductAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"

        android:gravity="center"
        android:hint="CENA PRODUKTU [zł]"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/descriptionProductAdd"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:layout_marginBottom="40dp"
        android:hint="OPIS PRODUKTU"
        android:textSize="20dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonEditProductForSale"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="75dp"
        android:background="@drawable/button_add_product"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:text="Wystaw na sprzedaż" />

</LinearLayout>

